{
  "name": "@cinnabar-forge/meta",
  "version": "0.3.0",
  "description": "Version updater",
  "keywords": [
    "cli",
    "version-management",
    "git-integration",
    "project-configuration",
    "semver",
    "interactive-cli",
    "npm-version",
    "git-commands",
    "automation-tools"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cinnabar-forge/node-meta.git"
  },
  "license": "ISC",
  "author": {
    "name": "Timur Moziev",
    "email": "timur.moziev@gmail.com",
    "url": "https://timurrin.github.io"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cinnabar-meta": "bin/cinnabar-meta.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "node esbuild.js",
    "build:dev": "tsc",
    "build:sea": "node sea.build.js",
    "dev": "tsc-watch",
    "fix": "prettier . --write && eslint --fix .",
    "format": "prettier . --write",
    "lint": "eslint --fix .",
    "prepack": "npm run build",
    "test": "prettier . -c && eslint --max-warnings 0 . && tsc && mocha './build/dev/test'"
  },
  "dependencies": {
    "clivo": "0.5.1"
  },
  "devDependencies": {
    "@cinnabar-forge/eslint-plugin": "0.6.1",
    "@types/chai": "4.3.16",
    "@types/mocha": "10.0.7",
    "@types/node": "20.14.11",
    "chai": "5.1.1",
    "esbuild": "0.23.0",
    "eslint": "8.57.0",
    "mocha": "10.6.0",
    "pre-commit": "1.2.2",
    "prettier": "3.3.3",
    "typescript": "5.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pre-commit": [
    "test"
  ]
}
